    <header class="header">
        <div class="container">
            <a class="header__logo" href="index.html">
                <img src="~/images/logo.png" alt="Logotipo">
            </a>
            <div class="header__navbar">
                <div class="header__navbar__mobile-menu">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
                <nav class="header__navbar__navigation-menu">
                    <ul class="header__navbar__navigation-menu__list">
                        @*
                            <li class="header__navbar__navigation-menu__list__item">@Html.ActionLink("Login", "LoginCliente", "AutenticacaoCliente")</li>*@

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="header__navbar__navigation-menu__list__item">@Html.ActionLink("Olá " + @User.Identity.Name, "", "")</li>
                            <li class="header__navbar__navigation-menu__list__item">@Html.ActionLink("Sair", "Logout", "AutenticacaoCliente")</li>
                            <li class="header__navbar__navigation-menu__list__item">@Html.ActionLink("Alterar Senha", "AlterarSenha", "AutenticacaoCliente")</li>
                        }
                        else
                        {
                            <li class="header__navbar__navigation-menu__list__item">@Html.ActionLink("Página Inicial", "Index", "Home")</li>
                            <li class="header__navbar__navigation-menu__list__item"><a href="">Passagens</a></li>
                            <li class="header__navbar__navigation-menu__list__item"><a href="">Contato</a></li>
                            <li class="header__navbar__navigation-menu__list__item"><a href="">Sobre</a></li>
                            <li class="header__navbar__navigation-menu__list__item">@Html.ActionLink("Logar", "LoginCliente", "AutenticacaoCliente")</li>
                        }
                        <button class="button">
                            @Html.ActionLink("Cadastrar", "InsertCliente", "AutenticacaoCliente")
                        </button>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    @RenderBody()

    <footer class="footer">
        <div class="container">
            <section class="footer__upper">
                <div class="footer__upper__content-main">
                    <picture class="footer__upper__content-main__img">
                        <a href="#">
                            <img src="./images/logo.png" alt="">
                        </a>
                    </picture>
                    <p class="footer__upper__content-main__paragraph">
                        Lorem ipsum dolor, sit amet consectetur adipisicing elit.
                        Veritatis ut reprehenderit deleniti provident magnam non libero
                        ratione voluptates! Ullam necessitatibus atque natus consequuntur
                        dolorem incidunt repudiandae delectus placeat? Repudiandae, quos.
                    </p>
                    <div class="footer__upper__content-main__icons">
                        <a href="#" target="_blank">
                            <iconify-icon icon="akar-icons:instagram-fill"></iconify-icon>
                        </a>
                        <a href="#" target="_blank">
                            <iconify-icon icon="brandico:facebook"></iconify-icon>
                        </a>
                        <a href="#" target="_blank">
                            <iconify-icon icon="akar-icons:linkedin-fill"></iconify-icon>
                        </a>
                    </div>
                </div>
                <div class="footer__upper__links">
                    <div class="footer__upper__links__section menu">
                        <h2 class="footer__upper__links__section__title">
                            Menu
                        </h2>
                        <ul class="footer__upper__links__section__list">
                            <li class="footer__upper__links__section__list__item">
                                <a href="#">Home</a>
                            </li>
                            <li class="footer__upper__links__section__list__item">
                                <a href="#">Passagens</a>
                            </li>
                            <li class="footer__upper__links__section__list__item">
                                <a href="#">Contato</a>
                            </li>
                        </ul>
                    </div>
                    <div class="footer__upper__links__section about">
                        <h2 class="footer__upper__links__section__title">
                            Sobre nós
                        </h2>
                        <ul class="footer__upper__links__section__list">
                            <li class="footer__upper__links__section__list__item">
                                <a href="#">Nossa história</a>
                            </li>
                        </ul>
                    </div>
                    <div class="footer__upper__links__section more">
                        <h2 class="footer__upper__links__section__title">
                            Saiba mais
                        </h2>
                        <ul class="footer__upper__links__section__list">
                            <li class="footer__upper__links__section__list__item">
                                <a href="#">Privacidade</a>
                            </li>
                            <li class="footer__upper__links__section__list__item">
                                <a href="#">Termos de uso</a>
                            </li>
                            <li class="footer__upper__links__section__list__item">
                                <a href="#">Cookies</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </section>
            <section class="footer__lower">
                <span class="footer__lower__all-rights">
                    © 2022 Volait - Todos os Direitos Reservados
                </span>
                <span class="footer__lower__developers">
                    <iconify-icon icon="entypo:code"></iconify-icon>
                    Desenvolvido por <a href="#" target="_blank" rel="noopener noreferrer">Ahrus</a>
                </span>
            </section>
        </div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/script")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>