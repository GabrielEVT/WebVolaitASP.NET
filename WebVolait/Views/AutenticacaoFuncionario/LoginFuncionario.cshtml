@model WebVolait.ViewModels.LoginFuncionarioViewModel

@{
    ViewBag.Title = "LoginFuncionario";
}



<main class="content-main login">
    <div class="container">
        <div class="side-content">
            <h1 class="side-content__logo"><a href="#">VOLAIT</a></h1>
            <div class="side-content__bottom">
                <h2 class="side-content__text">Bem vindo de volta <br class="line-break">a Volait</h2>
                <p>
                    Viva essa experiência, Viva Volait!
                </p>
                <picture class="side-content__image">
                    <img src="~/images/login.png" alt="">
                </picture>
            </div>
        </div>


        <div class="form-container">
            @using (Html.BeginForm(new { @class = "form form-login" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.urlRetorno)
                
                <div class="form__area-flex-title">
                    <h2 class="form__title">Login</h2>
                </div>
                
                <div class="form__area">
                    @Html.EditorFor(model => model.LoginFuncionario, new { htmlAttributes = new { @class = "form__area__input" } })
                    @Html.LabelFor(model => model.LoginFuncionario, htmlAttributes: new { @class = "form__area__label" })                   
                    @Html.ValidationMessageFor(model => model.SenhaFuncionario, "", new { @class = "text-danger" })
                </div>
                <div class="form__area">
                    @Html.EditorFor(model => model.SenhaFuncionario, new { htmlAttributes = new { @class = "form__area__input" } })
                    @Html.LabelFor(model => model.SenhaFuncionario, htmlAttributes: new { @class = "form__area__label" })                   
                    @Html.ValidationMessageFor(model => model.SenhaFuncionario, "", new { @class = "text-danger" })
                </div>
                <p class="form__text form__accent-text"><a href="#">Esqueceu sua senha?</a></p>
                <input class="button button--submit" type="submit" value="Enviar">
                
            }
            <p>Ainda não possui cadastro? <a class="form__accent-text" href="~/AutenticacaoFuncionario/InsertFuncionario">Cadastre-se!</a></span></p>
        </div>
    </div>
</main>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

