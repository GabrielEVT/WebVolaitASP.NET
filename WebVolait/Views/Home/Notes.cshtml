    ListarCodCli(MySqlDataReader dt)
    {
    var AltAl = new List<Cupom>
        ();
        while (dt.Read())
        {
        var AlTemp = new Cupom()
        {
        CPFCupom = (dt["CPFCupom"].ToString()),
        NomeCupom = (dt["NomeCupom"].ToString()),
        NomeSocialCupom = (dt["NomeSocialCupom"].ToString()),
